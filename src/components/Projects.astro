---
import {motion} from 'motion/react'
import {Image} from "astro:assets";
import {getTitleAnimation} from '~/animation.js'
import {getUI, getLocale} from '~/utils/i18n'
import SubTitle from "~/components/SubTitle.astro";
import speedtracer from '../../public/projects/speedtracer.webp'

const locale = getLocale(Astro)

const {
    index: {projects}
} = getUI(locale)

type imagesMapType = {
    [key: string]: ImageMetadata;
};

const imagesMap: imagesMapType = {
    'speedtracer': speedtracer,
}
---

<section class="mb-2 text-4xl font-bold sm:text-6xl">

    <motion.span
            client:load
            {...getTitleAnimation(1.7)}
    >

        <SubTitle>{projects.title}</SubTitle>

        {projects.items.map(project => (
                <motion.span
                        client:load
                        {...getTitleAnimation(0.1)}
                >
                    <p class="mt-20 text-4xl font-medium sm:text-4xl">
                        {project.title}
                    </p>

                    <p class="mt-6 text-2xl font-medium sm:text-3xl">
                        {project.description}
                    </p>

                    {project.media.map(image => (
                            <span class="flex justify-start pt-6">
                                                <Image class="rounded-3xl max-h-80 shadow-md border-[4px] border-[#bdbbae] w-full md:w-1/3"
                                                       src={imagesMap[image.src]} alt={image.alt}
                                                />
                                        </span>
                    ))}

                </motion.span>

                <motion.span
                        client:load
                        {...getTitleAnimation(0.2)}
                >
                    <div class="mt-6 flex max-w-28 flex-col gap-3 sm:gap-6 md:flex-row cursor-pointer">
                        <a
                                href={project.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="transition-bg flex items-center justify-center gap-2 rounded-xl px-6 py-4 transition-transform duration-150 hover:scale-[1.02] active:scale-[0.98] w-full border-dark bg-dark text-paper button-paper shadow-lg">
                            GitHub
                        </a>
                    </div>
                </motion.span>
        ))}

    </motion.span>
</section>