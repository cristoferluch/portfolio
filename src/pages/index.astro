---
import "~/styles/global.css";
import Header from "~/components/Header.astro";
import About from "~/components/About.astro";
import Projects from "~/components/Projects.astro";
import Skills from "~/components/Skills.astro";
import Contact from "~/components/Contact.astro";
---
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
</head>

<body class="min-h-[max(100dvh,_64rem)] overflow-x-hidden text-balance bg-paper font-['bricolage-grotesque'] text-dark">
<main class="container flex w-full flex-col  items-center gap-20">
    <Header></Header>
    <About></About>
    <Projects></Projects>
    <Skills></Skills>
</main>
<footer class="relative flex w-full flex-col items-center gap-16 overflow-hidden border-t border-dark bg-dark  text-paper  mt-28">
    <Contact></Contact>
</footer>
</body>
</html>
